@model IEnumerable<TranVanTai.DuongTuanDuy.Models.SACH>

@helper Truncate(string s, int lenght)
{
    if (s.Length < lenght)
    {
        @s
    }
    else
    {
        @s.Substring(0, lenght)<text>...</text>
    }

}

<div class="container">
    <h2 class="text-center">SÁCH BÁN NHIỀU</h2>
    <div class="row">
        @foreach (var sach in Model)
        {
            <div class="col-lg-6 col-md-6">
                <div class="media-object-default">
                    <div class="media">
                        <div class="media-left">
                            <a href="@Url.Action("ChiTietSach", "TranVanTai", new { id = sach.MaSach })">
                                <img class="media-object imgsachbannhieu" src="~/Images/@sach.AnhBia" alt="placeholder image">
                            </a>
                        </div>
                        <div class="media-body">
                            <a href="@Url.Action("ChiTietSach", "TranVanTai", new { id = sach.MaSach })"><h4 class="media-heading">@sach.TenSach</h4></a>
                            <p>Mô tả chi tiết sản phẩm: @Truncate( @sach.MoTa,190)</p>
                            <p>Số lượng bán: @sach.SoLuongBan</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <!-- row-->
    <hr
</div>
