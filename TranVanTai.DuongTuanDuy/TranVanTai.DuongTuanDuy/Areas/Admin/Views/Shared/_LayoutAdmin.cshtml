                    <li><a href="@Url.Action("Index","KhachHang")">QL KH</a> </li>
                    <li>
                        <a href="@Url.Action("Index","DonHang")">QL ĐH</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Menu")">QL Menu</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","TrangTin")">QL Trang Tin</a>
                    </li>
                    <li>
                        @Html.Action("LoginLogout", "Home")
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="container well">
        <div style="text-align:center;">
            <p>ADMIN</p>
        </div>
    </footer>
</body>
</html>
